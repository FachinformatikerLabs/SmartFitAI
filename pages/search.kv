<Search>:
    name: "Search"


    Image:
        source: 'resources/bg.png'
        fit_mode: "fill"

    BoxLayout:
        orientation: 'horizontal'

        NavLayout:
            size_hint_x: None
            width: '250dp'

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 1
            
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True

                GridLayout:
                    id: results_grid
                    cols: 3
                    row_default_height: '150dp'
                    row_force_default: True
                    spacing: '10dp'
                    size_hint_y: None
                    adaptive_height: True
                    padding: '124dp'
                    width: self.minimum_width
