<Search>:
    name: "Search"

    BackgroundLayout:

    SearchBar:
        orientation: 'horizontal'
        size_hint: 0.5, 0.05
        pos_hint: {'center_x': 0.5, 'center_y': 0.95}

    BoxLayout:
        orientation: 'horizontal'

        NavLayout:
            size_hint_x: None
            width: '250dp'

        BoxLayout:
            padding: ('0dp', '124dp', '0dp', '0dp')
            orientation: 'vertical'
            size_hint_x: 1
            
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True

                GridLayout:
                    id: results_grid
                    cols: 3
                    row_default_height: '150dp'
                    row_force_default: True
                    spacing: '10dp'
                    size_hint_y: None
                    adaptive_height: True
                    padding: '124dp'
                    width: self.minimum_width
