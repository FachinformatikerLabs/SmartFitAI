#:kivy 2.3.0
<Dashboard>:
    name: "Dashboard"
    
    FloatLayout:
        Label: 
            text: "Lass es dir schmecken"
            size_hint: (0.8, 0.5)
            pos_hint: {"center_x": 0.4, "center_y": 0.8}
            font_size: "40sp"
            halign: "center"
            size_hint: (0.3, 0.1)

        Image:
            pos_hint: {"center_x": 0.67, "center_y": 0.4}
            source: "resources/menu_beispiel.jpg"
            fit_mode: "contain"
            size_hint_x : 0.4

        Image:
            source: "resources/Logo.png"
            fit_mode: "contain"
            size_hint_x : 0.25
            size_hint_y : 0.25
            pos_hint: {"center_x": 0.8, "center_y": 0.85}

        Button: 
            text: "Start"
            border: 0, 32, 0, 32
            text_size: (None, None)
            pos_hint: {"center_x": 0.15, "center_y": 0.7} 
            halign:"center"  
            size_hint: (0.15, 0.05)
            background_normal: ''
            background_color: (209/255, 212/255, 201/255, 0.5)
            color: (85/255, 110/255, 83/255, 0.5)

        Button: 
            text: "Rezeptsuche"
            text_size: (None, None)
            pos_hint: {"center_x": 0.31, "center_y": 0.7} 
            halign:"center"  
            size_hint: (0.15, 0.05)
            background_normal: ''
            background_color: (209/255, 212/255, 201/255, 1)
            color: (85/255, 110/255, 83/255, 1)
            on_release: app.root.current = "RecipeSearch"

        Button: 
            text: "Zutatensuche"
            text_size: (None, None)
            pos_hint: {"center_x": 0.47, "center_y": 0.7} 
            halign:"center"  
            size_hint: (0.15, 0.05)
            background_normal: ''
            background_color: (209/255, 212/255, 201/255, 1)
            color: (85/255, 110/255, 83/255, 1)
            on_release: app.root.current = "IngredientSearch" 

        Button: 
            text: "Allergensuche"
            text_size: (None, None)
            pos_hint: {"center_x": 0.63, "center_y": 0.7} 
            halign:"center"  
            size_hint: (0.15, 0.05)
            background_normal: ''
            background_color: (209/255, 212/255, 201/255, 1)
            color: (85/255, 110/255, 83/255, 1)
            on_release: app.root.current = "AllergenSearch"

        Button: 
            text: "Neues Rezept"
            text_size: (None, None)
            pos_hint: {"center_x": 0.79, "center_y": 0.7} 
            halign:"center"  
            size_hint: (0.15, 0.05)
            background_normal: ''
            background_color: (209/255, 212/255, 201/255, 1)
            color: (85/255, 110/255, 83/255, 1)

        Button: 
            text: "Profil bearbeiten"
            text_size: (None, None)
            pos_hint: {"center_x": 0.79, "center_y": 0.11} 
            halign:"center" 
            size_hint: (0.15, 0.05)
            background_normal: ''
            background_color: (209/255, 212/255, 201/255, 1)
            color: (85/255, 110/255, 83/255, 1)

        Button: 
            text: "Ausloggen"
            text_size: (None, None)
            pos_hint: {"center_x": 0.79, "center_y": 0.05} 
            halign:"center"  
            size_hint: (0.15, 0.05)
            background_normal: ''
            background_color: (209/255, 212/255, 201/255, 1)
            color: (85/255, 110/255, 83/255, 1)
