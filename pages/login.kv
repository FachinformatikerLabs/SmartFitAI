#:kivy 2.3.0
<Login>:
   name: "Login"

# Hintergrundbild
   Image:
      source: 'resources/bg.png'
      fit_mode: "fill"

# Box Fürs Logo      
   MDBoxLayout:
      adaptive_size: True
      orientation: 'vertical'
      size_hint: 1, .3
      pos_hint: {'center_x': 0.5, 'center_y': 0.8}

      Image:
         source: "resources/logo_red.png"
         fit_mode: "contain"
         size_hint: .9, .9
         pos_hint: {'center_x': 0.5, 'center_y': 0.9}

# Box für Userinputs /Login
   MDBoxLayout:
      adaptive_size: True
      orientation: 'vertical'
      size_hint: .35, .2
      spacing: '32dp'
      pos_hint: {'center_x': 0.5, 'center_y': 0.5}

      MDTextField:
         mode: "filled"
         id: email
         MDTextFieldLeadingIcon:
            icon: "account"
         MDTextFieldHintText:
            text: "Email"
         MDTextFieldHelperText:
            text: "Bitte gebe deine Email ein"
            mode: "persistent"

      MDTextField:
         mode: "filled"
         id: password
         MDTextFieldLeadingIcon:
            icon: "lock"
         MDTextFieldHintText:
            text: "Passwort"
         MDTextFieldHelperText:
            text: "Bitte gebe dein Passwort ein"
            mode: "persistent"

# Box für Login Button / Neuer Benuter
   MDBoxLayout:
      adaptive_size: True
      orientation: 'vertical'
      pos_hint: {'center_x': 0.5, 'center_y': 0.3}
      spacing: '50dp'
      padding: ('0dp', '30dp', '0dp', '0dp')

      MDButton:
         style: "elevated"
         pos_hint: {'center_x': 0.3, 'center_y': 0.5}
         on_release: root.login_user()
         MDButtonIcon:
            icon: "login"
         MDButtonText:
            text: "Einloggen"

      MDButton:
         style: "elevated"
         on_release: app.root.current = "NewUser"
         MDButtonIcon:
            icon: "account-plus"
         MDButtonText:
            text: "Neuen Benutzer erstellen"

